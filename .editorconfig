# http://editorconfig.org/

root = true

[*]
  indent_style = "space"
  end_of_line = "lf"
  charset = "utf-8"
  trim_trailing_whitespace = "true"
  insert_final_newline = "false"
  max_line_length = "80"

[*.html]
  indent_size = "2"

[*.js]
  indent_size = "2"

[*.json]
  indent_size = "2"

[*.plist]
  indent_style = "2"
